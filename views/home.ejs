
<div class="gridwrapper">
    <div>
        
        <% if (currentUser) { %>
            <p class="post-topper"><a href="/posts/new">Create Post</a></p>
            
        <% } else { %>
            <p class="post-topper">Please <a href="/login">login</a> to create a new post</p>
        <% } %>
        <% for (const post of posts) { %>
            <div class="post-card">
                <div class="upvote">
                    <form action="/upvote" method="post">
                        <button class="up-tick"><img src='<%= post.upVote %>' alt="" class="up-tick-img"></button>
                        <input type="hidden" value="<%= post.id %>" name="postId">
                    </form>
                    <%= post.upvotes %>
                    <form action="/downvote" method="post">
                        <button class="down-tick"><img src="<%= post.downVote %>" alt="" class="up-tick-img"></button>
                        <input type="hidden" value="<%= post.id %>" name="postId">
                    </form>
                </div>
                <div class="main-post-card">
                    <p class="sig"><span class="subreedit-sig"><a href='/r/<%= post.subreedit %>'>r/<%= post.subreedit%></a></span> <span class="user-sig">Posted by <a href="/user/<%= post.username %>">u/<%= post.username %></a> <%= timeDifference(post.time) %></span></p>
                    <h3 class="main-title"><a href="/posts/<%=post.id%>"><%= post.title %></h3></a>
                    <div class="img-container">
                        <img class="main-img" src="<%= post.image_url%>" alt="">

                    </div>
                
                    <p><%= post.description %></p>
                </div>
            </div>
        <% } %>
    </div>

    <div class="aside">
        <img src="https://i.postimg.cc/j5HS84D5/reddit-logo.png" alt="" class="hero-logo">
        <h3 class="aside-header">Home</h3>
        <p class="aside-description">Your personal Reedit frontpage. Come here to check in with your favorite communities</p>
        <div class="aside-flex">
            <% if (currentUser) { %>
            <button class="aside-button"><a href="/posts/new">Create Post</a></button>
            <% } %>
        </div>
    </div>
</div>